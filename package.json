{
  "name": "ts-lib-template",
  "version": "0.1.0",
  "description": "a template to create a typescript lib project",
  "author": "Aoko",
  "homepage": "https://github.com/Aokoooooo/ts-lib-template",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest",
    "prettier": "prettier --write {src,test}/**/*.{js,ts,json}",
    "lint": "cross-env yarn prettier && tslint --fix 'src/**/*.ts'&& tslint --fix 'test/**/*.ts'",
    "prepublishOnly": "cross-env node ./scripts/prepublish.js && yarn tsc"
  },
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "cross-env": "^5.2.0",
    "husky": "^3.0.1",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3",
    "webpack": "^4.39.1",
    "webpack-cli": "^3.3.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,tsx,json,md}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ]
  },
  "files": [
    "dist",
    "src",
    "LICENSE",
    "package.json",
    "readme.md"
  ]
}
